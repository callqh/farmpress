{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext"
    ],
    "noEmit": false,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
